@page "/ContratosSemAero"
@using AeroVendas.ULF.Cliente.Components


<div id="content">
	
	<div class="panel-heading h1">Relatório Normativo</div>
	<div class="panel-body">
		<div class="row mb-3">
			<div class="col-md-5">
				<Cidades OnSelectChanged="SelectChanged" CidadesList="CidadesList" />
			</div>
			<div class="col-md-5">
				<Search OnSearchChanged="SearchChanged" />
			</div>
			<div class="col-md-2">
				<Sort OnSortChanged="SortChanged" />
			</div>

		</div>
	</div>

	
	<div class="row">
		<div class="col hideWhenPrint">
			<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
		</div>
		<div class="col hideWhenPrint">
			<button class="btn-outline-secondary rounded hideWhenPrint w-15" onclick="Print()"><i class="bi bi-printer"></i></button>
		</div>
		
		<div class="col-md-1 hideWhenPrint">
			<PageSizeDropDown SelectedPageSize="SetPageSize" />
		</div>
	</div>
	<div class="row">

		<div class="col">
			<AeroVendasTable viewAeroVendas="ListContratoSemAeroVendas" />
		</div>
	</div>
</div>
<div class="row">
	<div class="col hideWhenPrint">
		<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
	</div>
</div>