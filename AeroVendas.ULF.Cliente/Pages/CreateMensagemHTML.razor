@page "/CreateMensagemHTML"
@using TinyMCE.Blazor
<h2>Nova Campanha</h2>

<EditForm EditContext="_editContext" OnValidSubmit="Create" class="card card-body bg-light mt-5">
	<DataAnnotationsValidator />
	
	<div class="mb-3 row">
		<label for="titulo" class="col-md-2 col-form-label">Titulo:</label>
		<div class="col-md-10">
			<InputText id="titulo" class="form-control" @bind-Value="_mensagem.Titulo" />
			<ValidationMessage For="@(() => _mensagem.Titulo)" />
		</div>
	</div>

	<InputText hidden="true" id="templateEmailHtml" class="form-control" @bind-Value="_mensagem.TemplateEmailHtml" />


	<div class="row">
		<div class="col">
			<a href="/MensagemHTML" class="btn btn-danger float-end">Voltar</a>
			<button type="submit" class="btn btn-success me-4 float-end"
					disabled="@formInvalid">
				Gravar
			</button>


		</div>
	</div>
	
</EditForm>
