@page "/Arquivos"
@using AeroVendas.ULF.Cliente.Components
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<div id="content">

	<div class="panel-heading h1">Galeria de Imagens</div>
	<div class="panel-body">
		<div class="row mb-3">

			<div class="col-md-5">
				<Search OnSearchChanged="SearchChanged" />
			</div>
			<div class="col-md-5">
			</div>
			<div class="col-md-2">
				<SortFiles OnSortChanged="SortChanged" />
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col hideWhenPrint">
			<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
		</div>

		<div class="col-md-1 hideWhenPrint">
			<PageSizeDropDown SelectedPageSize="SetPageSize" />
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ImageUpload OnChange="AssignImageUrl" />
		</div>
	</div>
	<div class="row">

		
		<div class="col">
			<ArquivoTable arquivos="ArquivoList" OnDelete="DeleteArquivo" OnCopy="CopyClipbard" Aguardando="Aguardando" />
		</div>

	</div>
</div>
<div class="row">
	<div class="col hideWhenPrint">
		<Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
	</div>
</div>