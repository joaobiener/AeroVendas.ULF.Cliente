@inherits LayoutComponentBase
@using AeroVendas.ULF.Cliente.Components

<div class="page">
    <div class="sidebar hideWhenPrint">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthLinks />
        </div>
        <div class="top-row px-4 hideWhenPrint">
            <h3><span class="btn btn-success">Unimed Leste Fluminense</span></h3>
        </div>

        <article class="content px-4">
            <CascadingValue Name="HeadingColor" Value="@_color">
                @Body
            </CascadingValue>
        </article>
    </main>

    <BlazoredToasts Position="ToastPosition.TopRight"
                    Timeout="10"
                    IconType="IconType.FontAwesome"
                    SuccessIcon="oi oi-thumb-up"
                    ErrorIcon="oi oi-bug" />
</div>
@code
{
    private readonly string _color = "#036635";
}